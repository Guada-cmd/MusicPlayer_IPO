<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.musicplayer_ipo">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicPlayer_IPO.NoActionBar">
        <activity android:name=".Presentacion.ventana_playlist_favoritos"></activity>
        <activity android:name=".Presentacion.ventana_reproducir" />
        <activity android:name=".Presentacion.ventana_canciones" />
        <activity android:name=".Presentacion.ventana_album" />
        <activity android:name=".Presentacion.ventana_configuracion" />
        <activity android:name=".Presentacion.ventana_detalles_artistas" />
        <activity android:name=".Presentacion.ventana_artistas" />
        <activity android:name=".Presentacion.ventana_registro" />
        <activity android:name=".Presentacion.ventana_menu_principal" />
        <activity
            android:name=".Presentacion.main_activity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MusicPlayer_IPO.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>